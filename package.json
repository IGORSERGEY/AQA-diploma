{
    "name": "aqa-diploma",
    "version": "1.0.0",
    "description": "Automation test framework for diploma project",
    "main": "index.js",
    "scripts": {
        "unit:test": "jest --config='unit/jest.config.json' --coverage",
        "API:test": "jest --config='api/jest.config.json'",
        "e2e:test": "playwright test --config=e2e/config/playwright.config.ts",
        "e2e:report": "playwright show-report e2e/assets/reports",
        "e2e:allure-report": "allure generate e2e/assets/allure-results --clean -o e2e/assets/allure-report && allure open e2e/assets/allure-report"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/IGORSERGEY/AQA-diploma.git"
    },
    "author": "Igor Sergey",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/IGORSERGEY/AQA-diploma/issues"
    },
    "homepage": "https://github.com/IGORSERGEY/AQA-diploma#readme",
    "dependencies": {
        "log4js": "^6.9.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.4"
    },
    "devDependencies": {
        "@playwright/test": "^1.34.1",
        "@types/jest": "^29.5.1",
        "ajv": "^8.12.0",
        "allure-commandline": "^2.22.1",
        "allure-playwright": "^2.3.0",
        "axios": "^1.4.0",
        "jest": "^29.5.0",
        "prettier": "2.8.8",
        "randexp": "^0.5.3",
        "ts-jest": "^29.1.0"
    }
}
